<div class="overall_container">
  <div class="job_content">
    <div class="row">
      <div class="col-xs-6">
        <div class="job-desc">
          <h3><%= "#{@booking.job.name}"%></h3>
        </div>
        <div class="card" style="background-color: white">
          <br>
          <div class="card-description">
            <p>
              <%= "#{@booking.job.description}" %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <div>
          <%= cl_image_tag "#{@booking.job.photo}", height: 300, crop: :fill %>
        </div>
        <br>
      </div>
      <div class="col-xs-6 margin_left">
        <div class="booking_form_group">
          <% if policy(@booking).edit? %>
            <%= render 'bookings/bookingform', job: @booking.job, booking: @booking  %>
          <% end %>
        </div>
        <br>
        <div class="backlink">
          <%= link_to "View other job listings", jobs_path, class: "blue_font" %>
        </div>
      </div>
    </div>
  </div>
</div>
